<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Enterprise Mercury Insurance Automation Suite" parallel="methods" thread-count="1" verbose="1">
    
    <listeners>
        <listener class-name="com.enterprise.mercury.core.listeners.TestListener"/>
    </listeners>
    
    <!-- UI Test Suite -->
    <test name="UI Automation Tests" group-by-instances="true">
        <classes>
            <class name="com.enterprise.mercury.ui.tests.LoginTest"/>
        </classes>
    </test>
    
    <!-- API Test Suite -->
    <test name="API Automation Tests" group-by-instances="true">
        <classes>
            <class name="com.enterprise.mercury.api.tests.LoginApiTest"/>
        </classes>
    </test>
    
</suite>
